@model GiftOfTheGivers.Models.Donation
@{
    Layout = "_Layout";
}
<h2>Edit Donation</h2>
<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3"><label>Title</label><input name="Title" value="@Model.Title" class="form-control" /></div>
    <div class="mb-3"><label>Description</label><input name="Description" value="@Model.Description" class="form-control" /></div>
    <div class="mb-3"><label>Category</label><input name="Category" value="@Model.Category" class="form-control" /></div>
    <div class="mb-3"><label>Quantity</label><input name="Quantity" type="number" value="@Model.Quantity" class="form-control" /></div>
    <div class="mb-3"><label>Status</label><input name="Status" value="@Model.Status" class="form-control" /></div>
    <button class="btn btn-primary">Save</button>
</form>
